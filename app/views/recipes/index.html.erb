<h1>Recipes</h1>
<div class="container">
  <div class="card-group">
    <% @recipes.each do |recipe| %>
      <div class="card border-dark mb-3" style="max-width: 18rem;">
        <div class="card-header"><strong><%= recipe.title %></strong></div>
        <div class="card-body text-dark">
          <% recipe.ingredients.each do |ingredient| %>
            <p class="card-text"><%= ingredient.name %> <small>(<%= ingredient.quantity %>)</small></p>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>
</div>
